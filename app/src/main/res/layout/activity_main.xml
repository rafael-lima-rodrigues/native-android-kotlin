<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gradient_light_end_color"
    tools:context=".MainActivity">


    <EditText
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:id="@+id/edtWeight"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/weight"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:textColor="@color/gradient_start_color"
        android:textStyle="bold"
        android:backgroundTint="@color/gradient_start_color"
        android:textColorHint="@color/gradient_start_color"
        />

    <EditText
        android:layout_marginHorizontal="30dp"
        android:maxLength="4"
        android:layout_marginTop="16dp"
        android:id="@+id/edtHeight"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/height"
        android:inputType="numberDecimal"
        android:layout_below="@+id/edtWeight"
        android:textColor="@color/gradient_start_color"
        android:textStyle="bold"
        android:backgroundTint="@color/gradient_start_color"
        android:textColorHint="@color/gradient_start_color"
        />

    <ImageView
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:src="@drawable/imc"/>

    <Button
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_calculate"
        android:textStyle="bold"
        android:backgroundTint="@color/gradient_start_color"

        />

</RelativeLayout>